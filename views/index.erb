<section id="select-image">
      <h2>Step 1. Select an image</h2>
      <p>Enter the keyword to search for images</p>
      <input id="search-term" type="text">
      <button id="go-search">Go!</button>
      <div id="search-results"></div>
      <div id="branding"></div>
</section>

<section id="add-text">
  <h2>Step 2. Add Text</h2>
  <input id="text" type="text" value="Seek not greater wealth, but simpler pleasure; not higher fortune, but deeper felicity. Gandhi">
</section>

<section id="style-image">
  <h2>Step 3. Style it!</h2>
  <div id="workspace">
    <p id="caption"></p>
  </div>
  <div id="controls">
    Left: <input type="number" value="10" id="left">
    Top: <input type="number" value="10" id="top">
    Width: <input type="number" value="400" id="width">
    Size: <input type="number" value="32" id="size">
    Colour: <select id="colour">
      <option>red</option>
      <option>green</option>
      <option>white</option>
      <option>black</option>
      <option>yellow</option>
      <option>gray</option>
      <option>orange</option>
      <option>LightSalmon</option>
      <option>Chartreuse</option>
      <option>LightSkyBlue</option>
      <option>Purple</option>
      <option>Tomato</option>
      <option>YellowGreen</option>
      <option>Sienna</option>
      <option>PaleVioletRed</option>
      <option>LightCyan</option>
    </select>
    Align: <select id="align">
      <option>left</option>
      <option>right</option>
    </select>
  </div>
